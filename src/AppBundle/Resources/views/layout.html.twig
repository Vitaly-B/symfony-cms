{% extends '::base.html.twig' %}

{% block head %}
    {{ parent() }}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
{% endblock %}

{% block stylesheets %}
    {% stylesheets filter='cssrewrite'
    '@AppBundle/Resources/public/bower/bootstrap/dist/css/bootstrap.min.css'
    '@AppBundle/Resources/public/css/app.css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts
    '@AppBundle/Resources/public/bower/jquery/dist/jquery.slim.min.js'
    '@AppBundle/Resources/public/bower/popper.js/dist/umd/popper.min.js'
    '@AppBundle/Resources/public/bower/bootstrap/dist/js/bootstrap.min.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}

    {% block navbar %}
        <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
            <a class="navbar-brand" href="{{ path('homepage') }}">{{ 'Hello user!' | trans }}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse"
                    aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">

                {{ knp_menu_render('AppBundle:MenuBuilder:createTopLeftMenu', { currentClass: 'active' }) }}

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">

                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ app.request.getlocale() | capitalize }}</a>

                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                            {% for locale in parameter('locales') %}
                                <a class="dropdown-item" href="{{ path('homepage', {_locale: locale}) }}">{{ locale | capitalize }}</a>
                            {% endfor %}
                        </div>
                    </li>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLogIn"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                {#{% if app.user.preview %}#}
                                    {#<img class="app-top-naw-user-avatar"#}
                                         {#src="{{ app.user.preview | imagine_filter('user_avatar_22x22') }}"#}
                                         {#alt="{{ app.user.username }}">#}
                                {#{% endif %}#}
                                {{ 'app.layout.logged_in' | trans({'%username%': app.user.username}) }}
                            </a>

                            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLogIn">
                                <li class="nav-item"><a class="dropdown-item" href="{{ path('fos_user_profile_show') }}">{{ 'app.layout.fos_user_profile_show' | trans }}</a></li>
                                <li class="nav-item"><a class="dropdown-item" href="{{ path('fos_user_profile_edit') }}">{{ 'app.layout.fos_user_profile_edit' | trans }}</a></li>
                                <li class="nav-item"><a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">{{ 'app.layout.fos_user_security_logout'  | trans }}</a></li>
                            </ul>
                        </li>
                    {% else %}

                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="{{ path('fos_user_security_login') }}" id="navbarDropdownMenuLoggedOut"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ 'app.layout.login' | trans }}</a>

                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLoggedOut">
                                <a class="dropdown-item" href="{{ path('fos_user_security_login') }}">{{ 'app.layout.fos_user_security_login' | trans }}</a>
                                <a class="dropdown-item" href="{{ path('fos_user_registration_register') }}">{{ 'app.layout.fos_user_registration_register'  | trans }}</a>
                                <a class="dropdown-item" href="{{ path('fos_user_resetting_request') }}">{{ 'app.layout.fos_user_resetting_request'  | trans }}</a>
                            </div>
                        </li>
                    {% endif %}

                </ul>

            </div>
        </nav>
    {% endblock %}

    <div class="container">
        {% block page %}{% endblock %}
    </div>

    {% block footer %}
        <footer class="footer">
            <div class="container">
                <span class="text-muted">Place sticky footer content here.</span>
            </div>
        </footer>
    {% endblock %}

{% endblock %}